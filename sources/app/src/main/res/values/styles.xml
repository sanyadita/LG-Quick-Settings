<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/seekBarPreProgress</item>
        <item name="android:progressTint">@color/seekBarProgress</item>
        <item name="android:thumbTint">@color/btnOnBackground</item>
    </style>

    <style name="AppTheme.ImageView" parent="AppTheme">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.ImageView.VolumeIcon" parent="AppTheme.ImageView">
        <item name="android:background">@drawable/bg_volume_icon</item>
        <item name="android:layout_height">@dimen/volume_icon_size</item>
        <item name="android:layout_width">@dimen/volume_icon_size</item>
        <item name="android:padding">@dimen/volume_icon_padding</item>
    </style>

</resources>
